<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgg">

    <TextView
        android:id="@+id/pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aneetsans"
        android:text="Pemesanan"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view_pesta"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="#946038"
        android:backgroundTint="#946038"
        app:layout_constraintTop_toBottomOf="@id/pesan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="170dp"/>


    <View
        android:id="@+id/view_khusus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="#946038"
        android:backgroundTint="#946038"
        app:layout_constraintTop_toBottomOf="@id/view_pesta"
        app:layout_constraintLeft_toRightOf="@id/view_pesta"
        app:layout_constraintLeft_toLeftOf="@id/view_pesta"/>

    <View
        android:id="@+id/view_box"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="#946038"
        android:backgroundTint="#946038"
        app:layout_constraintTop_toBottomOf="@id/pesan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="170dp"/>

    <View
        android:id="@+id/view_kue"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="#946038"
        android:backgroundTint="#946038"
        app:layout_constraintTop_toBottomOf="@id/view_box"
        app:layout_constraintRight_toRightOf="@id/view_box"
        app:layout_constraintLeft_toLeftOf="@id/view_box"/>

    <ImageView
        android:id="@+id/pes_pesta"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:onClick="showPesta"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@id/view_pesta"
        app:layout_constraintRight_toRightOf="@id/view_pesta"
        app:layout_constraintTop_toTopOf="@id/view_pesta"
        app:srcCompat="@drawable/pesta1" />

    <ImageView
        android:id="@+id/pes_box"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:onClick="showBox"
        app:layout_constraintLeft_toLeftOf="@id/view_box"
        app:layout_constraintRight_toRightOf="@id/view_box"
        app:layout_constraintTop_toTopOf="@id/view_box"
        app:srcCompat="@drawable/box1" />

    <ImageView
        android:id="@+id/pes_khusus"
        android:layout_width="120dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/khusus1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/view_khusus"
        app:layout_constraintRight_toRightOf="@id/view_khusus"
        app:layout_constraintLeft_toLeftOf="@id/view_khusus"/>

    <ImageView
        android:id="@+id/pes_kue"
        android:layout_width="120dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/kue"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/view_kue"
        app:layout_constraintRight_toRightOf="@id/view_kue"
        app:layout_constraintLeft_toLeftOf="@id/view_kue"/>

    <TextView
        android:id="@+id/tv_pesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Catering Pesta"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/pes_pesta"
        app:layout_constraintRight_toRightOf="@id/pes_pesta"
        app:layout_constraintLeft_toLeftOf="@id/pes_pesta"/>

    <TextView
        android:id="@+id/tv_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catering Box"
        android:paddingTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/pes_box"
        app:layout_constraintRight_toRightOf="@id/pes_box"
        app:layout_constraintLeft_toLeftOf="@id/pes_box"/>

    <TextView
        android:id="@+id/tv_khusus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catering Khusus"
        android:paddingTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/pes_khusus"
        app:layout_constraintRight_toRightOf="@id/pes_khusus"
        app:layout_constraintLeft_toLeftOf="@id/pes_khusus"/>

    <TextView
        android:id="@+id/tv_kue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catering Kue"
        android:paddingTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/pes_kue"
        app:layout_constraintRight_toRightOf="@id/pes_kue"
        app:layout_constraintLeft_toLeftOf="@id/pes_kue"/>
</androidx.constraintlayout.widget.ConstraintLayout>